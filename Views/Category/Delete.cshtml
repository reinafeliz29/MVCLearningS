@model Category

<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-3">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Category</h2>
            <hr />
        </div>
      @*  <div asp-validation-summary="All"></div>*@
        <div class="row mb-3">
            <div class="col-4">
                <label asp-for="Name"></label>
                <input asp-for="Name" disabled class="form-control" />
            </div>
            <div class="col-4">
                <label asp-for="DisplayOrder"></label>
                <input asp-for="DisplayOrder" disabled class="form-control" />
            </div>
            <div class="col-4 mt-4">
                <button type="submit" class="btn btn-danger" style="width:150px">Remove</button>
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px">Back To list</a>
            </div>
        </div>
    </div> 
</form>
@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial"></partial>
    }
}